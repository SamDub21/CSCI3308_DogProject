<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<main>
  <div class="container" style="margin-top: 2%;">
      <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-primary rounded box-shadow">
          <div class="lh-100">
            <h3 class="mb-0 text-white lh-100">Send a Message</h3>
              
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <ul class="nav nav-pills" id="myTab" role="tablist">
                <li id="ctl00_ContentPlaceHolder1_liInbox" class="nav-item" role="presentation">
                    <a href="/messages_inbox" style="text-decoration: none;"><button class="nav-link" id="pills-inbox-tab"type="button">Inbox</button></a>
                </li>
                <li id="ctl00_ContentPlaceHolder1_liCompose" class="nav-item" role="presentation">
                  <button class="nav-link active" id="pills-compose-tab" type="button">Compose</button>
                </li>
                <li id="ctl00_ContentPlaceHolder1_liSent" class="nav-item" role="presentation">
                    <a href="/messages_sent" style="text-decoration: none;"><button class="nav-link" id="pills-sent-tab" type="button">Sent</button></a>
                </li>
                
            </ul>
          </div>
          <div class="card-body">
              <div class="tab-content">
                  
                  <!-- COMPOSE SECTION -->

                  <div class="content">
    
                    <div class="container">
                      <div class="row align-items-stretch no-gutters contact-wrap">
                        <div class="col-md-12">
                          <div class="form h-100">

                            <form class="mb-5" action="/message_send" method="post" id="sendMessage" name="sendMessage">
                              <div class="row">
                                  <label for="" class="col-form-label">Recipient *</label>
                                  <input type="text" class="form-control" name="username_to" id="username_to" placeholder="Recipient's Username" required>
                                </div>

                                <div class="row" style="margin-top: 10px;">
                                  <label for="" class="col-form-label">Subject *</label>
                                  <input type="text" class="form-control" name="subject" id="subject"  placeholder="Message Subject" required>
                                </div>
                
                              <div class="row" style="margin-top: 10px;">
                                  <label for="message" class="col-form-label">Message *</label>
                                  <textarea class="form-control" name="message" id="message" cols="30" rows="4"  placeholder="Write your message" required></textarea>
                              </div>

                              <div class="row" style="margin-top: 25px;">
                                <div class="col-md-12 form-group" style="border-radius: 5px;">
                                  <input type="submit" value="Send Message" class="btn btn-primary py-2 px-4" style="border-radius: 7px;">
                                </div>

                              </div>
                            </form>
                
                            <div id="form-message-warning mt-4"></div> 
                            <div id="form-message-success" style="display: none;">
                            </div>
                
                          </div>
                        </div>
                      </div>
                    </div>
                
                  </div>
                    
                    
                
                    <script src="js/jquery-3.3.1.min.js"></script>
                    <script src="js/popper.min.js"></script>
                    <script src="js/bootstrap.min.js"></script>
                    <script src="js/jquery.validate.min.js"></script>
                    <script src="js/main.js"></script>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include ('../partials/footer') %>