<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<main>
    <div class="container text-center">
        <div class="row my-4">
            <h1>User Profile</h1>
        </div>
        <div class="row my-4">
            <div class="col">
                <img src="<%= img %>" alt="Profile Picture" width="400" height="auto">
            </div>
            <div class="col">
                <ul class="list-group" id="profileInfo">
                    <li class="list-group-item">Username : <%= user %></li>
                    <li class="list-group-item">First Name : <%= first %></li>
                    <li class="list-group-item">Last Name : <%= last %></li>
                    <li class="list-group-item">Email : <%= email %></li>
                </ul>
            </div>
        </div>
    </div>
</main>
<%- include ('../partials/footer') %>